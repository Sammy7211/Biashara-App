<h2 class="mb-4">Your Cart</h2>

<% if (cart.length === 0) { %>
  <p>Your cart is empty.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% cart.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td>KSh <%= item.price %></td>
          <td>KSh <%= item.price * item.quantity %></td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total:</th>
        <th>KSh <%= cart.reduce((acc, item) => acc + item.price * item.quantity, 0) %></th>
      </tr>
    </tfoot>
  </table>
  <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
<% } %>
